<!-- Modal -->
<div class="modal fade" id="ModalForgetPassword" tabindex="-1" role="dialog" aria-labelledby="exampleForgetPassword" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleForgetPassword">
          <%= t('forget_password') %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, local: true, url: password_path(resource_name), html: { method: :post, id: 'form_forget_password' }) do |f| %>
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInputGroup">
              <%= t('email') %>
            </label>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <i class="fa fa-envelope"></i>
                </div>
              </div>
              <%= f.email_field :email, class: 'form-control', autocomplete: 'email', placeholder: t('p_email'), required: true, pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$', maxlength: 64, minlength: 7, id: 'form_forget_password_email', 'data-purpose' => 'email', 'aria-invalid' => 'true' %>
            </div>
          </div>
          
          <div class="col-auto text-center mt-3">
            <%= f.submit t('send'), class: "btn btn-primary w90", id: 'form_login_btn_forget_password' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <p class="w100 text-center">
          <%= t('dont_have_an_account') %> ?
          <a href="#" class="tc" data-dismiss="modal" data-toggle="modal" data-target="#ModalRegister"><br>
            <%= t('register') %>
          </a>
        </p>
        <p class="w100 text-center">
          <%= t('already_have_an_account') %> ?
          <a href="#" class="tc" data-dismiss="modal" data-toggle="modal" data-target="#ModalLogin"><br>
            <%= t('login') %>
          </a>
        </p>
      </div>
    </div>
  </div>
</div>